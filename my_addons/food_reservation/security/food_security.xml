<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

    <!-- ROLS -->
    <record id="food_reservation_orderer" model="res.groups">
        <field name="name">Orderer</field>
        <field name="category_id" ref="base.module_category_food_reservation"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="food_reservation_recorder" model="res.groups">
        <field name="name">Recorder</field>
        <field name="category_id" ref="base.module_category_food_reservation"/>
    </record>


    <!-- RULES -->
    <record id="food_reservation_orderer_own" model="ir.rule">
        <field name="name">Food Reservation User Only Can See His Orders</field>
        <field name="model_id" ref="food_reservation.model_food_order"/>
        <field name="perm_create" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('food_reservation.food_reservation_orderer'))]"/>
        <field name="domain_force">[('user_id.id', '=', user.id)]</field>
        <field name="active">True</field>
    </record>

    <record id="food_reservation_recorder_all" model="ir.rule">
        <field name="name">Food Reservation Admin Can See And Edit All</field>
        <field name="model_id" ref="food_reservation.model_food_order"/>
        <field name="groups" eval="[(4, ref('food_reservation.food_reservation_recorder'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="active">True</field>
    </record>

        

    </data>
</odoo>
