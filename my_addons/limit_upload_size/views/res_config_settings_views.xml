<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_max_attachment_size" model="ir.ui.view">
        <field name="name">res.config.settings.view.inherit.max.attachment.size</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//div[@id='companies']" position="after">
                    <h2>Max Attachment Size</h2>
                    <div class="row mt16 o_settings_container" id="settings_max_attachment_size">
                        <div class="col-12 col-lg-6 o_setting_box" id="set_max_att_size">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Define your max attachment size in Chatter (MB)
                                </div>
                                <div>
                                    <div class="mt16">
                                        <field name="max_attachment_size" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </data>
        </field>

    </record>

</odoo>